<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">日本の都道府県ごとの図書館</h1>
<div class="container mx-auto p-4">

<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">図書館の検索</h1>
  <%= form_for(:q, url: libraries_search_path, method: :get) do |f| %>
    <%= f.search_field :formal_cont, class: "w-[300px] py-3 px-4 pl-11 block border-gray-200 shadow-sm rounded-md text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400", placeholder: "図書館名を入力してください" %>
    <%= f.submit "検索", class: "ml-4 py-3 px-4 inline-flex flex-shrink-0 justify-center items-center gap-2 rounded-md border border-transparent font-semibold bg-blue-500 text-white hover:bg-blue-600 focus:z-10 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all text-sm" %>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @regions_data.each do |region_name, prefectures| %>
      <div class="bg-white shadow-md rounded-lg p-4">
        <h2 class="text-xl font-semibold mb-2"><%= region_name %></h2>
        <ul class="space-y-1">
          <% prefectures.each do |pref_name,  pref| %>
              <li class="hover:bg-gray-100 rounded-md px-2 py-1">
              <%= link_to pref_name, region_path(pref_name: pref), class: "block" %>
              </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>