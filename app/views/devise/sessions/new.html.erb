<h2 class="text-2xl mb-6 text-gray-700">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-4">
    <%= f.label :email, class: "block text-lg font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, class: "block text-lg font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 border border-gray-300 rounded" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check mb-3">
      <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
      <%= f.label :remember_me, "ログインを記憶する", class: "block text-lg font-medium text-gray-700" %>
    </div>
  <% end %>

  <div class="actions mt-6">
    <%= f.submit "ログイン", class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mt-6">
    <%= link_to "新規登録", new_registration_path(resource_name), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
<% end %>
